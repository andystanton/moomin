attribute vec3 position;
attribute vec3 moved;
attribute vec3 totalOffset;
uniform mat4 MVP;
uniform vec2 offset;

void main()
{
    vec3 totalOffset = vec3(offset.x, offset.y, 1.0);
    vec3 moved = position + totalOffset;
    
    // Output position of the vertex, in clip space : MVP * position
    gl_Position =  MVP * vec4(moved, 1.0);
}
